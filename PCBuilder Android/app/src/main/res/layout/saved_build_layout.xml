<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".saved_build_controller"
    android:background="@drawable/result_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="135dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/result_cover"
                android:layout_width="367dp"
                android:layout_height="96dp"
                android:background="@drawable/result_cover"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Spinner
                android:id="@+id/sp1"
                android:layout_width="157dp"
                android:layout_height="33dp"
                android:background="@drawable/result_table_border"
                android:textAlignment="center"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="361dp"
                android:layout_height="495dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/result_cover">

                <TableRow>

                    <TextView
                        android:id="@+id/gpu"
                        android:layout_width="150dp"
                        android:layout_height="85dp"
                        android:background="@drawable/result_table_border"
                        android:paddingTop="8dp"
                        android:text="GPU"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/attributes"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/gpu_result"
                        android:layout_width="213dp"
                        android:layout_height="85dp"
                        android:background="@drawable/result_table_border"
                        android:paddingTop="8dp"
                        android:text="GPU Result"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/attributes"
                        app:layout_constraintTop_toTopOf="parent" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/ram"
                        android:layout_width="150dp"
                        android:layout_height="85dp"
                        android:background="@drawable/result_table_border"
                        android:paddingTop="8dp"
                        android:text="RAM"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/attributes"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/ram_result"
                        android:layout_width="205dp"
                        android:layout_height="85dp"
                        android:background="@drawable/result_table_border"
                        android:paddingTop="8dp"
                        android:text="RAM Result"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/attributes"
                        app:layout_constraintTop_toTopOf="parent" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/processor"
                        android:layout_width="150dp"
                        android:layout_height="85dp"
                        android:background="@drawable/result_table_border"
                        android:paddingTop="8dp"
                        android:text="Processor"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/attributes"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/processor_result"
                        android:layout_width="205dp"
                        android:layout_height="85dp"
                        android:background="@drawable/result_table_border"
                        android:paddingTop="8dp"
                        android:text="Processor Result"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/attributes"
                        app:layout_constraintTop_toTopOf="parent" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/motherboard"
                        android:layout_width="150dp"
                        android:layout_height="85dp"
                        android:background="@drawable/result_table_border"
                        android:paddingTop="8dp"
                        android:text="Motherboard"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/attributes"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/motherboard_result"
                        android:layout_width="205dp"
                        android:layout_height="85dp"
                        android:background="@drawable/result_table_border"
                        android:paddingTop="8dp"
                        android:text="Motherboard Result"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/attributes"
                        app:layout_constraintTop_toTopOf="parent" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/graphics_card"
                        android:layout_width="150dp"
                        android:layout_height="85dp"
                        android:background="@drawable/result_table_border"
                        android:paddingTop="8dp"
                        android:text="PSU"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/attributes"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/PSU_result"
                        android:layout_width="205dp"
                        android:layout_height="85dp"
                        android:background="@drawable/result_table_border"
                        android:paddingTop="8dp"
                        android:text="Graphics Card Result"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/attributes"
                        app:layout_constraintTop_toTopOf="parent" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/storage"
                        android:layout_width="150dp"
                        android:layout_height="85dp"
                        android:background="@drawable/result_table_border"
                        android:paddingTop="8dp"
                        android:text="Storage"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/attributes"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/storage_result"
                        android:layout_width="205dp"
                        android:layout_height="85dp"
                        android:background="@drawable/result_table_border"
                        android:paddingTop="8dp"
                        android:text="Storage Result"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/attributes"
                        app:layout_constraintTop_toTopOf="parent" />

                </TableRow>
            </TableLayout>


            <Button
                android:id="@+id/logout"
                android:layout_width="77dp"
                android:layout_height="38dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/result_button"
                android:onClick="logout"
                android:text="Logout"
                android:textColor="#fff"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintTop_toBottomOf="@+id/tableLayout" />


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>